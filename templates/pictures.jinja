{% extends "_main.jinja" %}

{% block head %}
	<link href="/css/styles-gallery.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
<div class="container-fluid" id="wrapper">
<div class="container" id="fotos">
  <div class="row">
    <h1 class="col-md-12 bewerbung-h1">
      <i class="fa fa-camera" aria-hidden="true"></i>
      <nbsp>
      {{ PICTURES_TITLE }}
    </h1>
    <!-- Container for the image gallery -->
    <div class="container-fotos" id="container">
      <!-- Full-width images with number text -->
      {% for PICTURE in PICTURES %}
        <div class="mySlides">
          <div class="numbertext">{{ loop.index }} / {{ loop.length }}</div>
          <img src="/images/gallery/{{ PICTURE.filename }}" style="width:100%">
        </div>
      {% endfor %}

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>

      <!-- Image text -->
      <div class="caption-container-fotos">
        <p id="caption"></p>
      </div>

      <!-- Thumbnail images -->
      <div class="row">
        {% for PICTURE in PICTURES %}
          <div class="column">
            <img class="demo cursor" src="/images/gallery/{{ PICTURE.filename }}" width="170" height="100" 
              onclick="currentSlide({{ loop.index }})" alt="{{ PICTURE.description }}">
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</div>
<script src="/js/gallery.js"></script>
{% endblock content %}
